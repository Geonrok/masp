# ========================================
# Multi-Asset Strategy Platform - Environment Variables
# ========================================
# 이 파일을 복사하여 .env로 저장 후 실제 값 입력
# Windows: copy .env.example .env
# Linux/Mac: cp .env.example .env
# NEVER commit .env to git (.env is in .gitignore)

# ----------------------------------------
# Upbit API (Korean Exchange)
# ----------------------------------------
UPBIT_ACCESS_KEY=your_access_key_here
UPBIT_SECRET_KEY=your_secret_key_here

# ----------------------------------------
# Bithumb API (Korean Exchange)
# ----------------------------------------
BITHUMB_API_KEY=your_api_key_here
BITHUMB_SECRET_KEY=your_secret_key_here

# ----------------------------------------
# Binance API (Optional - International)
# ----------------------------------------
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# ----------------------------------------
# Kill-Switch Configuration
# ----------------------------------------
# 이 파일이 존재하면 모든 거래가 즉시 중단됩니다
KILL_SWITCH_FILE=E:\투자\Multi-Asset Strategy Platform\kill_switch.txt

# ----------------------------------------
# Trading Limits (Phase 2C)
# ----------------------------------------
# 주문당 최대 금액 (KRW)
MAX_ORDER_VALUE_KRW=1000000

# 총 자산 대비 최대 포지션 비율 (0.10 = 10%)
MAX_POSITION_PCT=0.10

# 일일 최대 손실 한도 (KRW)
MAX_DAILY_LOSS_KRW=100000

# ----------------------------------------
# Adapter Mode
# ----------------------------------------
# paper = 모의 거래 (기본값, 안전)
# live = 실제 거래 (주의! 실제 자금 사용)
ADAPTER_MODE=paper

# ----------------------------------------
# Logging Level
# ----------------------------------------
# DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO

# ----------------------------------------
# Legacy (Phase 0-1)
# ----------------------------------------
# Korea Stock Broker (not used in Phase 2)
KOREA_BROKER_APP_KEY=
KOREA_BROKER_APP_SECRET=
KOREA_BROKER_ACCOUNT_NUMBER=
KOREA_BROKER_ACCOUNT_TYPE=

# Dry Run (deprecated - use ADAPTER_MODE=paper)
DRY_RUN=true
