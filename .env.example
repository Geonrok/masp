# =============================================================================
# MASP (Multi-Asset Strategy Platform) Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# =============================================================================
# Authentication
# =============================================================================

# Admin token for API authentication (generate a secure random string)
MASP_ADMIN_TOKEN=your-secure-admin-token-here

# Dashboard password (for Streamlit login)
MASP_DASHBOARD_PASSWORD=your-dashboard-password

# =============================================================================
# Trading Configuration
# =============================================================================

# Enable live trading (set to 1 for production, 0 for paper trading)
MASP_ENABLE_LIVE_TRADING=0

# =============================================================================
# Exchange API Keys
# =============================================================================

# Upbit (Korean Crypto Exchange)
UPBIT_ENABLED=1
UPBIT_API_KEY=your-upbit-api-key
UPBIT_API_SECRET=your-upbit-api-secret

# Bithumb (Korean Crypto Exchange)
BITHUMB_ENABLED=1
BITHUMB_API_KEY=your-bithumb-api-key
BITHUMB_API_SECRET=your-bithumb-api-secret

# Binance Futures (Global Crypto Exchange)
BINANCE_FUTURES_ENABLED=0
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret

# eBest / LS Securities Open API (Korean Stock Exchange)
# Get keys from: https://openapi.ls-sec.co.kr
EBEST_APP_KEY=your-ebest-app-key
EBEST_APP_SECRET=your-ebest-app-secret
EBEST_ACCOUNT_NO=your-ebest-account-number
EBEST_ACCOUNT_PWD=your-ebest-transaction-password

# =============================================================================
# Telegram Notifications
# =============================================================================

# Telegram Bot (create via @BotFather)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# =============================================================================
# Server Configuration
# =============================================================================

# API server
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=0
API_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Dashboard server
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=8501

# =============================================================================
# SSL/TLS Configuration (HTTPS)
# =============================================================================

# Enable HTTPS (set to 1 to enable)
API_SSL_ENABLED=0

# Path to SSL certificate file (.pem format)
# Generate with: openssl req -x509 -newkey rsa:4096 -keyout key.pem -out cert.pem -days 365 -nodes
API_SSL_CERTFILE=/path/to/cert.pem

# Path to SSL private key file (.pem format)
API_SSL_KEYFILE=/path/to/key.pem

# Password for encrypted private key (optional, leave empty if key is not encrypted)
# API_SSL_KEYFILE_PASSWORD=

# =============================================================================
# Data Storage
# =============================================================================

# Data directory for backtests, logs, etc.
MASP_DATA_DIR=./data

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
MASP_LOG_LEVEL=INFO

# =============================================================================
# Performance Settings
# =============================================================================

# Cache TTL in seconds
MASP_CACHE_TTL=30

# Rate limit (requests per second)
MASP_RATE_LIMIT=10
