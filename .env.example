# =============================================================================
# MASP (Multi-Asset Strategy Platform) Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# =============================================================================
# Authentication
# =============================================================================

# Admin token for API authentication (generate a secure random string)
MASP_ADMIN_TOKEN=your-secure-admin-token-here

# Dashboard password (for Streamlit login)
MASP_DASHBOARD_PASSWORD=your-dashboard-password

# =============================================================================
# Trading Configuration
# =============================================================================

# Enable live trading (set to 1 for production, 0 for paper trading)
MASP_ENABLE_LIVE_TRADING=0

# =============================================================================
# Exchange API Keys
# =============================================================================

# Upbit (Korean Crypto Exchange)
UPBIT_ENABLED=1
UPBIT_API_KEY=your-upbit-api-key
UPBIT_API_SECRET=your-upbit-api-secret

# Bithumb (Korean Crypto Exchange)
BITHUMB_ENABLED=1
BITHUMB_API_KEY=your-bithumb-api-key
BITHUMB_API_SECRET=your-bithumb-api-secret

# Binance Futures (Global Crypto Exchange)
BINANCE_FUTURES_ENABLED=0
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret

# =============================================================================
# Telegram Notifications
# =============================================================================

# Telegram Bot (create via @BotFather)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# =============================================================================
# Server Configuration
# =============================================================================

# Config API server
CONFIG_API_HOST=127.0.0.1
CONFIG_API_PORT=8000

# Dashboard server
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=8501

# =============================================================================
# Data Storage
# =============================================================================

# Data directory for backtests, logs, etc.
MASP_DATA_DIR=./data

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
MASP_LOG_LEVEL=INFO

# =============================================================================
# Performance Settings
# =============================================================================

# Cache TTL in seconds
MASP_CACHE_TTL=30

# Rate limit (requests per second)
MASP_RATE_LIMIT=10
